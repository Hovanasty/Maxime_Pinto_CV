{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Datededebut</th>
                <td>{% if formation.dateDeDebut %}{{ formation.dateDeDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datedefin</th>
                <td>{% if formation.dateDeFin %}{{ formation.dateDeFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ formation.intitule }}</td>
            </tr>
            <tr>
                <th>Institu</th>
                <td>{{ formation.institu }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ formation.lieu }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ formation.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('formation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('formation_edit', { 'id': formation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
